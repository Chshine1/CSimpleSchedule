<UserControl x:Class="DiaryProject.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DiaryProject.Views"
             mc:Ignorable="d"
             d:DesignHeight="728" d:DesignWidth="970">
    <StackPanel Width="970" Height="728" Background="{StaticResource White4}">
        <Button Margin="0,60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="退出登录"
                Command="{Binding LogoutCommand}"/>
        <Button Margin="0,60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="使用本地数据"
                Command="{Binding UseLocalCommand}"/>
        <Button Margin="0,60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="使用云端数据"
                Command="{Binding UseWebCommand}"/>
    </StackPanel>
</UserControl>
